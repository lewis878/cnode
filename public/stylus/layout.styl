@import "var.styl"

.header
  &.show
    left: 200px
  position: fixed
  z-index: 98
  top: 0
  left: 0
  width: 100%
  height: 44px
  background: #fff
  box-shadow 0 0 4px rgba(0, 0, 0, 0.3)
  text-align: center
  line-height: 44px
  transition left 0.3s ease
  .toolbar, .create
    position: absolute
    top: 0
    width: 44px
    height: 44px
    cursor: pointer
    i
      font-size: 20px
  .toolbar
    left: 5px
  .create
    right: 5px
    > a
      display: block
      height: 100%
      color: $color-theme
  h1
    height: 44px
    font-size: 16px
    font-weight: bold

.mask
  &.show
    opacity: 1
    pointer-events auto
  position: fixed
  z-index: 99
  top: 0
  left: 0
  right: 0
  bottom: 0
  background: rgba(0, 0, 0, 0.4)
  opacity: 0
  pointer-events none
  transition opacity 0.3s ease

.menu
  &.show
    left: 0
  position: fixed
  z-index: 100
  top: 0
  bottom: 0
  left: -200px
  width: 200px
  background: #fff
  transition left 0.3s ease
  .user-info
    padding: 20px
    .login-no
      > a
        display: flex
        align-items: center
        i
          font-size: 24px
          margin-right: 10px
          color: $color-sub-theme
    .login-yes
      > a
        display: flex
        align-items: center
        .avatar
          border-radius 50%
          margin-right: 10px
        .name
          flex: 1
          overflow: hidden
          text-overflow ellipsis
          white-space: nowrap
      .btns
        margin-top: 15px
        display: flex
        align-items: center
      .logout, .my-collect
        flex: 1
        padding: 5px
        background: $color-sub-theme
        border-radius 4px
        font-size: 12px
        text-align: center
        color: #fff
        cursor: pointer
      .my-collect
        background: $color-theme
        margin-right: 10px

  .menu-list
    margin: 0 20px
    padding-top: 10px
    border-top: $border
    li
      padding: 10px 0
      &:nth-last-child(2)
        border-top: $border
      &.current
        > a
          color: $color-theme
      > a
        display: flex
        align-items: center
        i
          margin-right: 30px
        span
          font-weight: bold

.main
  padding-top: 44px
  padding-bottom: 20px
  background: #fff

.back-to-top
  &.show
    opacity: 1
    pointer-events all
  position: fixed
  right: 10px
  bottom: 80px
  width: 50px
  height: 50px
  background: $color-theme
  border-radius 50%
  text-align: center
  line-height: 50px
  color: #fff
  transition opacity 0.3s ease
  opacity: 0
  pointer-events none
  cursor: pointer
  i
    font-size: 30px
