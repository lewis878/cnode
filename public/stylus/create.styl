@import "var.styl"

.alert
  &.show
    top: 0
  position: fixed
  z-index: 98
  top: -44px
  left: 0
  right: 0
  height: 44px
  text-align: center
  line-height: 44px
  background: rgba(0, 0, 0, 0.7)
  color: #fff
  transition top 0.3s ease

.line
  margin: 20px 15px
  display: flex
  align-items: center
  #select-tab
    flex: 1
    margin: 0 10px
    padding-left: 30px
    height: 30px
    border: 1px solid $color-theme
    border-radius 4px
  .issue
    padding: 5px 20px
    background: $color-theme
    border-radius 4px
    color: #fff

.title
  margin: 20px 15px
  padding: 10px 0
  border: $border
  border-left: 0
  border-right: 0
  input[type=text]
    display: block
    width: 100%
    font-weight: bold
    font-style: italic


.content
  margin: 0 15px
  textarea
    resize: none
    width: 100%
    height: 400px
    border: $border
    border-radius 5px
    background: #f0f0f0
    padding: 8px

