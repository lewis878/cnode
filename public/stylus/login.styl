@import "var.styl"
.main
  padding: 0

.login
  position: fixed
  top: 0
  left: 0
  bottom: 0
  right: 0
  background: #e8e8e8
  .login-box
    position: absolute
    top: 45%
    left: 50%
    transform translate(-50%, -50%)
    width: 80%
    //height: 100px
    //background: red
    input[type=text], button
      display: block
      width: 100%
      height: 44px
      border-radius 4px
    input[type=text]
      padding: 0 10px
      margin-bottom: 10px
    button
      background: $color-theme
      color: #fff
      cursor: pointer

.alert
  &.show
    top: 0
  position: fixed
  z-index: 98
  top: -44px
  left: 0
  right: 0
  height: 44px
  text-align: center
  line-height: 44px
  background: rgba(0, 0, 0, 0.7)
  color: #fff
  transition top 0.3s ease

