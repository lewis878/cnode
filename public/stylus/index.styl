@import "var.styl"
.topic-list
  li
    margin: 0 15px
    padding: 10px 0
    border-bottom: $border
    &:last-child
      border-bottom: none
    .title
      display: flex
      align-items: center
      .tag
        line-height: 1
        font-size: 12px
        padding: 5px
        border-radius 4px
        background: deeppink
        color: #fff
        &.top
          background: #ed3931
        &.good
          background: #ed713a
        &.share
          background: $color-theme
        &.ask
          background: #459eff
        &.job
          background: #7b77ed
        &.dev
          background: #eda08a
      .text
        flex: 1
        margin-left: 10px
        font-size: 16px
        font-weight: bold
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
    .content
      margin-top: 10px
      display: flex
      align-items: center
      .avatar
        border-radius 50%
        margin-right: 10px
      .info
        flex: 1
        p
          display: flex
          align-items: center
          justify-content: space-between
          span > b
            color: $color-theme

.loading
  padding: 10px
  display: flex
  align-items: center
  justify-content: center
  span
    margin-left: 10px
