@import "var.styl"

.recent
  display: flex
  align-items: center
  height: 44px
  background: #fff
  li
    flex: 1
    text-align: center
    line-height: 44px
    cursor: pointer
    border-bottom: 2px solid #e8e8e8
    &:last-child
      border-left: 1px solid #e8e8e8
    &.current
      color: $color-sub-theme
      border-bottom-color: $color-sub-theme

.no-data
  padding: 20px
  text-align: center
  i
    font-size: 50px
